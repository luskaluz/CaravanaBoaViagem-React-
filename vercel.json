{
  "version": 2,
  "builds": [
    {
      "src": "backend/server.js",  
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "backend/server.js" } 
  ],
  "crons": [                    
    {
      "path": "/api/cron/pos-vendas",
      "schedule": "0 1 * * *",
      "timezone": "America/Sao_Paulo"
    },
    {
      "path": "/api/cron/enviar-lembretes",
      "schedule": "*/10 * * * *",
      "timezone": "America/Sao_Paulo"
    },
    {
      "path": "/api/cron/finalizar-transporte-auto",
      "schedule": "0 2 * * *",
      "timezone": "America/Sao_Paulo"
    }
  ]
}