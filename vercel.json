{
  "version": 2,
  "builds": [
    {
      "src": "backend/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "backend/server.js" }
  ],
  "crons": [
    {
      "path": "/api/cron/executar-todas-tarefas-diarias", 
      "schedule": "03 6 * * *"    
    },
    {
      "path": "/api/cron/executar-todas-tarefas-diarias", 
      "schedule": "24 6 * * *"    
    }
  ]
}